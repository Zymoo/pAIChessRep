<ChessCell>:
    set_hint: None, None
    on_release: self.parent.parent.parent.chesscell_clicked(self.id)
    Image:
        set_hint: None, None
        allow_stretch: True
        keep_ratio: False
        y: self.parent.y - (self.parent.height - self.height)/2
        x: self.parent.x
        height: self.parent.height 
        width: self.parent.width


<ChessGame>:
    ChessboardCentered:
        id: board_container
        Chessboard:
            id: board
            rows: 8
            columns:8

